<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".JingRanApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JingRan"
        tools:targetApi="31">
        
        <activity
            android:name="com.jingran.taskmanager.ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JingRan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.jingran.taskmanager.ui.activity.TaskEditActivity"
            android:exported="false"
            android:theme="@style/Theme.JingRan.NoActionBar"
            android:parentActivityName="com.jingran.taskmanager.ui.activity.MainActivity" />
            
        <activity
            android:name="com.jingran.taskmanager.ui.activity.CourseScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.JingRan"
            android:parentActivityName="com.jingran.taskmanager.ui.activity.MainActivity" />
            
        <activity
            android:name="com.jingran.taskmanager.ui.activity.DataSyncActivity"
            android:exported="false"
            android:theme="@style/Theme.JingRan"
            android:parentActivityName="com.jingran.taskmanager.ui.activity.MainActivity" />
            
        <activity
            android:name="com.jingran.taskmanager.ui.activity.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.JingRan"
            android:parentActivityName="com.jingran.taskmanager.ui.activity.MainActivity" />
            
        <receiver android:name="com.jingran.taskmanager.receiver.NotificationReceiver" />
        
    </application>

</manifest>