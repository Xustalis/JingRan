<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_system_grouped_background"
    tools:context=".ui.fragment.SmartPlanningFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 日期选择区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ios_container_background"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/button_previous_day"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_left"
                    android:contentDescription="前一天"
                    app:tint="@color/ios_blue" />

                <TextView
                    android:id="@+id/text_view_current_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024年01月15日 星期一"
                    style="@style/IOSHeadline"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/button_next_day"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="后一天"
                    app:tint="@color/ios_blue" />

            </LinearLayout>

            <!-- 统计信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ios_container_background"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/IOSFootnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日效率统计"
                    android:textAllCaps="true"
                    android:textColor="@color/ios_secondary_label"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignBounds">

                    <TextView
                        android:id="@+id/text_view_total_tasks"
                        style="@style/IOSSubhead"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:text="总任务数: 0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/text_view_completed_tasks"
                        style="@style/IOSSubhead"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:text="已完成: 0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/text_view_completion_rate"
                        style="@style/IOSSubhead"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:text="完成率: 0%" />

                    <TextView
                        android:id="@+id/text_view_total_duration"
                        style="@style/IOSSubhead"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:text="总时长: 0分钟" />
                </GridLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_completion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/ios_green"
                    android:progressBackgroundTint="@color/ios_separator" />

            </LinearLayout>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/button_generate_plan"
                    style="@style/IOSButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="生成智能计划"
                    android:layout_marginBottom="12dp"
                    app:backgroundTint="@color/ios_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_add_emergency_task"
                        style="@style/IOSButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="紧急任务"
                        android:textSize="14sp"
                        app:backgroundTint="@color/ios_red" />

                    <Button
                        android:id="@+id/button_import_schedule"
                        style="@style/IOSButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_marginStart="6dp"
                        android:text="导入课表"
                        android:textSize="14sp"
                        app:backgroundTint="@color/ios_gray" />
                </LinearLayout>

            </LinearLayout>

            <!-- 固定日程区域 -->
            <TextView
                style="@style/IOSFootnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固定日程"
                android:textAllCaps="true"
                android:textColor="@color/ios_secondary_label"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_fixed_schedules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ios_container_background"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_fixed_schedule" />

            <!-- 今日计划区域 -->
            <TextView
                style="@style/IOSFootnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日计划"
                android:textAllCaps="true"
                android:textColor="@color/ios_secondary_label"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_plan_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ios_container_background"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_plan_item" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/ios_blue" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>