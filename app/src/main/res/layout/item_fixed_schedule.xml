<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:backgroundTint="@color/ios_background_secondary"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 时间指示器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 10:00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/ios_green"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/text_view_recurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每周"
                android:textSize="10sp"
                android:textColor="@color/ios_label_tertiary"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/ios_green"
            android:layout_marginEnd="12dp" />

        <!-- 日程信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="课程/会议标题"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/ios_label_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/text_view_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textSize="13sp"
                android:textColor="@color/ios_label_secondary"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="6dp"
                app:drawableTint="@color/ios_label_secondary" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描述信息"
                android:textSize="11sp"
                android:textColor="@color/ios_label_tertiary"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 固定日程标识 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/image_view_fixed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_event"
                app:tint="@color/ios_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固定"
                android:textSize="9sp"
                android:textColor="@color/ios_green"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="1dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>