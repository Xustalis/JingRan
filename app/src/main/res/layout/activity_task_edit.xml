<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_system_background">

    <!-- iOS Style Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/ios_system_background"
        android:elevation="1dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="返回"
            app:tint="@color/ios_blue" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新建任务"
            style="@style/IOSNavigationTitle"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="8dp" />

        <!-- Save Button -->
        <TextView
            android:id="@+id/btnSaveText"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="保存"
            style="@style/IOSNavigationButton"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#F2F2F7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 基本信息卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ios_secondary_system_grouped_background"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:padding="0dp">

                <!-- 任务标题 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务标题"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/editTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入任务标题"
                        style="@style/IOSFormInput"
                        android:inputType="text"
                        android:maxLines="2"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    style="@style/IOSSeparator"
                    android:layout_marginStart="16dp" />

                <!-- 目标描述 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目标描述"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/editGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入目标描述"
                        style="@style/IOSFormInput"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minLines="2"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- 任务详情卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:padding="0dp">

                <!-- 起始时间 (仅短期任务) -->
                <LinearLayout
                    android:id="@+id/layoutStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起始时间"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/editStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请选择起始时间"
                        style="@style/IOSFormInput"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:clickable="true" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 任务时长 (仅短期任务) -->
                <LinearLayout
                    android:id="@+id/layoutDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务时长"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/editDuration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入时长"
                            style="@style/IOSFormInput"
                            android:inputType="number"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分钟"
                            android:textSize="17sp"
                            android:textColor="#8E8E93"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 起始日期 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_start_date"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/editStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请选择起始日期"
                        style="@style/IOSFormInput"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:clickable="true" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 结束日期 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_start_date"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/editEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请选择结束日期"
                        style="@style/IOSFormInput"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:clickable="true" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 任务总量 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_total_amount"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/editTotalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入任务总量"
                        style="@style/IOSFormInput"
                        android:inputType="numberDecimal"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 分配次数 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutAllocationTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_allocation_times"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/editAllocationTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入分配次数"
                        style="@style/IOSFormInput"
                        android:inputType="number"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 每次分配量 (仅长期任务) -->
                <LinearLayout
                    android:id="@+id/layoutAllocationAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_allocation_amount"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvAllocationAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        style="@style/IOSFormInput"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:clickable="false" />

                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C8"
                    android:layout_marginStart="16dp" />

                <!-- 截止时间 (仅短期任务) -->
                <LinearLayout
                    android:id="@+id/layoutDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="截止时间"
                        style="@style/IOSFormLabel"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <EditText
                         android:id="@+id/editDeadline"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="请选择截止时间"
                         style="@style/IOSFormInput"
                         android:fontFamily="sans-serif"
                         android:focusable="false"
                         android:clickable="true" />

                 </LinearLayout>

                 <!-- 分割线 -->
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#C6C6C8"
                     android:layout_marginStart="16dp" />

                 <!-- 提醒时间 -->
                 <LinearLayout
                     android:id="@+id/layoutReminderTime"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="16dp"
                     android:clickable="true"
                     android:focusable="true"
                     android:background="?android:attr/selectableItemBackground">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="提醒时间"
                         style="@style/IOSFormLabel"
                         android:layout_marginBottom="8dp"
                         android:fontFamily="sans-serif" />

                     <TextView
                         android:id="@+id/editReminderTime"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="请选择提醒时间"
                         style="@style/IOSFormInput"
                         android:fontFamily="sans-serif"
                         android:focusable="false"
                         android:clickable="true" />

                 </LinearLayout>

                 <!-- 分割线 -->
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#C6C6C8"
                     android:layout_marginStart="16dp" />

                 <!-- 优先级 (仅短期任务) -->
                 <LinearLayout
                     android:id="@+id/layoutPriority"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="16dp"
                     android:clickable="true"
                     android:focusable="true"
                     android:background="?android:attr/selectableItemBackground">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="优先级"
                         style="@style/IOSFormLabel"
                         android:layout_marginBottom="8dp"
                         android:fontFamily="sans-serif" />

                     <TextView
                         android:id="@+id/tvPriority"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="中"
                         style="@style/IOSFormInput"
                         android:fontFamily="sans-serif"
                         android:background="@null"
                         android:clickable="true"
                         android:focusable="true" />

                 </LinearLayout>

             </LinearLayout>

             <!-- 任务描述卡片 -->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="#FFFFFF"
                 android:layout_marginBottom="32dp"
                 android:elevation="1dp"
                 android:padding="16dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="任务描述"
                     style="@style/IOSFormLabel"
                     android:layout_marginBottom="8dp"
                     android:fontFamily="sans-serif" />

                 <EditText
                     android:id="@+id/editDescription"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:hint="请输入任务描述"
                     style="@style/IOSFormInput"
                     android:inputType="textMultiLine"
                     android:maxLines="6"
                     android:minLines="3"
                     android:fontFamily="sans-serif"
                     android:gravity="top" />

             </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F2F2F7">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="取消"
            android:textSize="17sp"
            android:textColor="#007AFF"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif"
            android:elevation="1dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="保存"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="#007AFF"
            android:fontFamily="sans-serif"
            android:elevation="1dp" />

    </LinearLayout>

</LinearLayout>