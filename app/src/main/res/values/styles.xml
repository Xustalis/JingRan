<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- iOS Style Base Styles -->
    <style name="IOSBaseStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <!-- iOS Navigation Bar Styles -->
    <style name="IOSNavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/ios_system_background</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <style name="IOSNavigationTitle" parent="IOSBaseStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ios_label</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="IOSNavigationButton" parent="IOSBaseStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/ios_blue</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:minHeight">44dp</item>
    </style>
    
    <!-- iOS Text Styles -->
    <style name="IOSLargeTitle" parent="IOSBaseStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSTitle1" parent="IOSBaseStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSTitle2" parent="IOSBaseStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSTitle3" parent="IOSBaseStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSHeadline" parent="IOSBaseStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSBody" parent="IOSBaseStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSCallout" parent="IOSBaseStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSSubhead" parent="IOSBaseStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_label</item>
    </style>
    
    <style name="IOSFootnote" parent="IOSBaseStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_gray</item>
    </style>
    
    <style name="IOSCaption1" parent="IOSBaseStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_gray</item>
    </style>
    
    <style name="IOSCaption2" parent="IOSBaseStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ios_gray</item>
    </style>
    
    <!-- iOS Form Styles -->
    <style name="IOSFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/ios_secondary_system_grouped_background</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <style name="IOSFormSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="IOSFormLabel" parent="IOSFootnote">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/ios_secondary_label</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="IOSFormInput" parent="IOSBody">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/ios_tertiary_label</item>
        <item name="android:textColor">@color/ios_label</item>
        <item name="android:padding">14dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <!-- iOS Button Styles -->
    <style name="IOSButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ios_button_background</item>
        <item name="android:textColor">@color/ios_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:backgroundTint">@color/button_blue</item>
    </style>
    
    <style name="IOSPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_blue</item>
        <item name="android:textColor">@color/ios_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <style name="IOSSecondaryButton" parent="IOSBody">
        <item name="android:background">@color/ios_gray6</item>
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    
    <!-- iOS Separator Style -->
    <style name="IOSSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/ios_separator</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
</resources>