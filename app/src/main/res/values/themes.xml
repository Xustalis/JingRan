<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JingRan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorOnPrimary">@color/ios_white</item>
        <item name="colorPrimaryContainer">@color/ios_system_fill</item>
        <item name="colorOnPrimaryContainer">@color/ios_label</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/ios_teal</item>
        <item name="colorOnSecondary">@color/ios_white</item>
        <item name="colorSecondaryContainer">@color/ios_secondary_system_fill</item>
        <item name="colorOnSecondaryContainer">@color/ios_label_secondary</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/ios_system_background</item>
        <item name="colorOnBackground">@color/ios_label</item>
        <item name="colorSurface">@color/ios_secondary_system_grouped_background</item>
        <item name="colorOnSurface">@color/ios_label</item>
        <item name="colorSurfaceVariant">@color/ios_secondary_system_fill</item>
        <item name="colorOnSurfaceVariant">@color/ios_label_secondary</item>
        
        <!-- Outline and inverse colors -->
        <item name="colorOutline">@color/ios_separator</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/ios_system_background</item>
        <item name="android:navigationBarColor">@color/ios_system_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Theme for TaskEditActivity without ActionBar -->
    <style name="Theme.JingRan.NoActionBar" parent="Theme.JingRan">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>